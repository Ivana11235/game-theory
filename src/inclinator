import java.util.*;
import java.io.*;

public class inclinator {

    public ArrayList<Nation> nations;
    
    private ArrayList<String> cs{
       ArrayList<String> cs=new ArrayList<>();
       cs.add("cyber");
       cs.add("internet");}
    private ArrayList<String> hr{
        ArrayList<String> hr=new ArrayList<>();
        hr.add("human rights");
        hr.add("humanitarian");
        hr.add("refugee");
    }
    private ArrayList<String> wr{
        ArrayList<String> wr=new ArrayList<>();
        wr.add("women");
        wr.add("female");
    }
    private ArrayList<String> g{
        ArrayList<String> g=new ArrayList<>();
        g.add("gender");}

    private ArrayList<String> e{
        ArrayList<String> e=new ArrayList<>();
        e.add("environment");
        e.add("emission");
        e.add("climate");
    }

    private HashMap<String, ArrayList<String>> key{
        HashMap<String, ArrayList<String>> key= new HashMap ();
        key.put("cs",cs);
        key.put("hr",hr);
        key.put("wr",wr);
        key.put("g",g);
        key.put("e",e);
    };

    private ArrayList<Float> Inclination=new ArrayList<>();

   
    
    public void inclinate(String keyword){

        int fileCount=0;
        File[] fileArray=new File("!!!!!!!input!!!").listFiles();

        for(File f: fileArray){
            boolean checkFile=false;
            Scanner s=new Scanner(f); // to read the files
            for(int i=0;i<10;i++){
                String line=s.nextLine();
                ArrayList list =key.get(keyword);
                for (Object word: list){
                    if (line.contains(word.toString())){
                        checkFile=true;
                    }
                }}
            if (checkFile==true){
                fileCount+=1;
                while (s.hasNextLine()){
                    String line=s.nextLine();
                    for (Nation n:nations){
                        if (line.contains(n.abbr)&&line.contains("dY")){
                            n.inclination+=1;
                        } else if (line.contains(n.abbr)&&line.contains("dA")) {
                            n.inclination+=0.5;}
                    }
                }
            }}
        for (Nation n: nations){
            n.inclination/=fileCount;}
        s.close;
